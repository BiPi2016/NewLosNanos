<%- include('../includes/start') %>
<link rel="stylesheet" href="/css/admin.css">
</head>
<body>
    <%- include('../includes/topNav') %>
    <%- include('./adminMenu') %>
    <h1 class="title"><%=title%></h1>
    <main>
        <%if(locals.categories.length > 0) {%>
            <ol class="itemList">
            <%categories.forEach( category => {%>
                <li class="itemList__item">
                    <div class="listProps">
                        <span class="sectionName centerFlex">Id</span>
                        <span class="sectionValue"><%=category._id%></span>
                    </div>
                    <div class="listProps">
                        <span class="sectionName centerFlex">Name</span>
                        <span class="sectionValue"><%=category.name%></span>
                    </div>    
                    <div class="listProps">
                        <span class="sectionName centerFlex">Audience</span>
                        <span class="sectionValue"><%=category.audience.name%></span>
                    </div>                
                </li>
            <%})%>
            </ol>
        <%} else {%>
            <h2>No Category Found</h2>
        <%}%>
    </main>

</body>
</html>